# Environment
NODE_ENV=development
PORT=3000

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/local_marketplace_lister
SUPABASE_URL=http://localhost:54321
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# Security
JWT_SECRET=your-jwt-secret-key-change-in-production
COOKIE_SECRET=your-cookie-secret-key-change-in-production
# Encryption key for storing credentials (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))")
ENCRYPTION_KEY=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Social Media Integration
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_CALLBACK_URL=http://localhost:5173/connections/facebook/callback

# AI Service (OpenRouter)
OPENROUTER_API_KEY=your-openrouter-api-key

# Email Service
CENTRAL_EMAIL_USER=post@example.com
CENTRAL_EMAIL_PASS=your-secure-password
EMAIL_DOMAIN=example.com

# IMAP Configuration (Incoming)
IMAP_HOST=imap.gmail.com
IMAP_PORT=993

# SMTP Configuration (Outgoing)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-user@gmail.com
SMTP_PASS=your-smtp-app-password

# Google API (for Gmail proxy and user auth)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3001/api/auth/google/callback

# eBay API (Smart Scout)
EBAY_APP_ID=your_ebay_production_app_id
EBAY_CERT_ID=your_ebay_production_cert_id
EBAY_SANDBOX=false